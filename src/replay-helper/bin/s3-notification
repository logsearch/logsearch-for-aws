#!/bin/bash

set -e
set -u

mkdir tmp-replay-$$

cat | jq -c \
  --arg BUCKET "${BACKFILL_BUCKET}" \
  --arg AWS_REGION "${AWS_DEFAULT_REGION}" \
  '.Contents[] | {
    "Id" : .ETag | fromjson,
    "MessageBody" : { 
      "Message" : {
        "Records" : [
          {
            "awsRegion" : $AWS_REGION,
            "s3" : {
              "bucket" : {
                "name" : $BUCKET
              },
              "object" : {
                "name" : .Key
              }
            }
          }
        ]
        "s3Bucket" : $BUCKET,
        "s3ObjectKey" : [ .Key ]
      } | tostring
    } | tostring
  }' \
  | (
    cd tmp-replay-$$
    split -l 10
  )

for CHUNK in $( find tmp-replay-$$ -type f ) ; do
  aws sqs send-message-batch \
    --queue-url "${BACKFILL_QUEUE_URL}" \
    --entries "$( cat ${CHUNK} | jq --slurp -r '. | tostring' )"
done

rm -fr tmp-replay-$$
